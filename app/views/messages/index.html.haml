.wrapper

  = render 'shared/side_bar'
        
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          current-group
        %ul.main-header__left-box__member-list
          Memberï¼š
          %li.main-header__left-box__member-list__member user-name
      = link_to 'Edit', 'https://www.google.com/', class:'main-header__edit-btn'

    .messages
      = render @messages

    .form
      .new-message
        .input-box
          = form_for [@group, @message] do |f|
            = f.text_field :content, class: 'input-box__text', placeholder: 'type a message', id: "message_content"
            = f.label :image, class: 'input-box__image' do
              = fa_icon 'picture-o', class: 'icon'
              = f.file_field :image, class: 'input-box__image__file', id: "message_image"
            = f.submit 'Send', class: 'submit-btn'