.wrapper
.chat-side
  .side-header
    .side-header__box
      %p.side-header__box__user-name 
        = current_user.name           
      %ul.side-header__box__menu
        %li.side-header__box__menu__new-group
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.side-header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .groups
    = link_to 'https://www.google.com/', class: "group" do
      %p.group__group-name Group-name
      %p.group__latest-message latestmessage
      
.chat-main
  .main-header
    .main-header__left-box
      %h2.main-header__left-box__current-group
        current-group
      %ul.main-header__left-box__member-list
        Member：
        %li.main-header__left-box__member-list__member user-name
    = link_to 'Edit', 'https://www.google.com/', class:'main-header__edit-btn'

  .messages
    .message
      .message__upper-info
        %p.message__upper-info__talker User-name
        %p.message__upper-info__date 2019/08/24(Sat) 12:52:24
      %p.message__text メッセージテキスト
    .message
      .message__upper-info
        %p.message__upper-info__talker User-name
        %p.message__upper-info__date 2019/08/24(Sat) 16:55:03
      %p.message__text メッセージテキスト

  .form
    .new-message
      .input-box
        %input{name: "message[content]", placeholder: "type a message", type: "text", class: "input-box__text", id: "message_content"}/
        %label{for: "message_image", class: "input-box__image"}
          %i.fa.fa-image
          %input{name: "message[image]", type: "file", class: "input-box__image__file", id: "message_image"}/
      %input{ name: "commit", type: "submit", value: "Send", class: "submit-btn"}/